{% extends 'base.html.twig' %}

{% block title %}Добавление файла к предложению{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-12 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <form method="POST" action="" enctype="multipart/form-data">
                        <h5 class="card-title text-center">Добавление нового файла для предложения №<strong>{{ offerNumber }}</strong></h5>
                        {{ form_start(attachFileToOfferForm) }}
                        <div class="form-group">
                            <ul class="collection-ul-email" data-prototype="{{ form_widget(attachFileToOfferForm.attach.vars.prototype)|e('html_attr') }}">
                                {% for single in attachFileToOfferForm.attach %}
                                    <li>{{ form_row(single, {label: "Прикрепленные файлы."}) }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                        <button class="btn btn-lg btn-primary" type = "submit">Добавить</button>
                        {{ form_end(attachFileToOfferForm) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent () }}

    <script src="{{ asset ('/js/attach-collection-widget.js') }}"></script>
{% endblock %}