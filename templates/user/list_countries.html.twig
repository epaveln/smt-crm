{% extends 'base.html.twig' %}

{% block title %}Все страны в системе{% endblock %}

{% block body %}
    <div class="row bg-white">
        <div class="col-sm-9 col-md-7 col-lg-12 mx-auto margin-300">
            <h5 class="article-title">Список стран в системе</h5>
            <form name="deleteChecked" action="{{ path ('delete_countries') }}">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <table class="table table-striped table-hover">
                            <thead class="thead-light">
                            <tr>
                                <th scope="col"></th>
                                <th scope="col">Название</th>
                                <th scope="col">iD</th>
                                <th scope="col"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for country in countries %}
                                <tr>
                                    <td><input type="checkbox" name="country[]" value="{{ country.id }}"></td>
                                    <td class="font-weight-bold">{{ country.name }}</td>
                                    <td><small class="a-light-gray">{{ country.id }}</small></td>
                                    <td class="text-right"><a href="{{ path ('edit_country', {id: country.id}) }}"><i class="far fa-lg fa-edit"></i></a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Удалить выбранные</button>
                </div>
            </form>

        </div>
    </div>
{% endblock %}
