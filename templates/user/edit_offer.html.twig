{% extends 'base.html.twig' %}

{% block title %}Изменение предложения{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-12 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Изменение предложения</h5>
                    {{ form_start(editOfferForm) }}

                    {{ form_row(editOfferForm.title, {label: "Название предложения."}) }}
                    {{ form_row(editOfferForm.number, {label: "Номер предложенияи."}) }}
                    {{ form_row(editOfferForm.offerType, {label: "Тип предложения."}) }}
                    {{ form_row(editOfferForm.contractor, {label: "Контрагент."}) }}
                    {{ form_row(editOfferForm.createdAt, {label: "Дата создания."}) }}

                    <div class="form-group">
                        <ul class="collection-ul-attach" data-prototype="{{ form_widget(editOfferForm.attach.vars.prototype)|e('html_attr') }}">
                            {% for attach in editOfferForm.attach %}

                                <li class="collection-li"><i class="fas fa-paperclip"></i>{{ form_row(attach, {label: "Прикрепленный файл.", attr: {"READONLY": "READONLY"}}) }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="text-right">
                        <a class="btn btn-outline-secondary" href="{{ path ('attach_file_to_offer', {id: offerId}) }}">
                            <i class="fas fa-plus-circle"></i>  Прикрепить файл
                        </a>
                    </div>

                    <button class="btn btn-lg btn-primary" type = "submit">Изменить</button>
                    {{ form_end(editOfferForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent () }}

    <script src="{{ asset ('/js/attach-collection-widget.js') }}"></script>
{% endblock %}