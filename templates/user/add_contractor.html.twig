{% extends 'base.html.twig' %}

{% block title %}Добавление новогй страны в систему{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-12 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <form method="POST" action="">
                        <h5 class="card-title text-center">Добавление нового контрагента в систему</h5>
                        {{ form_start(contractorForm) }}

                        {{ form_row(contractorForm.name, {label: "Название компании."}) }}
                        {{ form_row(contractorForm.address, {label: "Адрес компании."}) }}
                        {{ form_row(contractorForm.contractorType, {label: "Тип контрагента."}) }}
                        {{ form_row(contractorForm.country, {label: "Страна."}) }}

                        <div class="form-group">
                            <ul class="collection-ul-email" data-prototype="{{ form_widget(contractorForm.emails.vars.prototype)|e('html_attr') }}">
                                {% for email in contractorForm.emails %}
                                    <li>{{ form_row(email, {label: "Email компании."}) }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="form-group">
                            <ul class="collection-ul-phone" data-prototype="{{ form_widget(contractorForm.phones.vars.prototype)|e('html_attr') }}">
                                {% for phone in contractorForm.phones %}
                                    <li>{{ form_row(phone, {label: "Телефон компании."}) }}</li>
                                {% endfor %}
                            </ul>
                        </div>

                        <button class="btn btn-lg btn-primary" type = "submit">Добавить</button>
                        {{ form_end(contractorForm) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent () }}

    <script src="{{ asset ('/js/email-collection-widget.js') }}"></script>
    <script src="{{ asset ('/js/phone-collection-widget.js') }}"></script>
{% endblock %}