{% extends 'base.html.twig' %}

{% block title %}Изменение данных сотрудника компании{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-12 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Изменение данных сотрудника компании</h5>
                    {{ form_start(editPersonForm) }}

                    {{ form_row(editPersonForm.name, {label: "Имя сотрудника."}) }}
                    {{ form_row(editPersonForm.contractor, {label: "Сотрудник компании"}) }}
                    {{ form_row(editPersonForm.position, {label: "Должность на предприятии."}) }}
                    {{ form_row(editPersonForm.skypeId, {label: "Skype id сотрудника."}) }}
                    {{ form_row(editPersonForm.telegram, {label: "Telegram сотрудника."}) }}

                    <div class="form-group">
                        <ul class="collection-ul-email" data-prototype="{{ form_widget(editPersonForm.email.vars.prototype)|e('html_attr') }}">
                            {% for email in editPersonForm.email %}
                                <li class="collection-li">{{ form_row(email, {label: "Email сотрудника."}) }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="form-group">
                        <ul class="collection-ul-phone" data-prototype="{{ form_widget(editPersonForm.phone.vars.prototype)|e('html_attr') }}">
                            {% for phone in editPersonForm.phone %}
                                <li class="collection-li">{{ form_row(phone, {label: "Телефон сотрудника."}) }}</li>
                            {% endfor %}
                        </ul>
                    </div>

                    <button class="btn btn-lg btn-primary" type = "submit">Изменить</button>
                    {{ form_end(editPersonForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent () }}

    <script src="{{ asset ('/js/email-collection-widget.js') }}"></script>
    <script src="{{ asset ('/js/phone-collection-widget.js') }}"></script>
{% endblock %}