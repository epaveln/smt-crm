{% extends 'base.html.twig' %}

{% block title %}Все ключевые слова в системе{% endblock %}

{% block body %}
    <div class="row bg-white">
        <div class="col-sm-9 col-md-7 col-lg-12 mx-auto margin-300">
            <h5 class="article-title">Список ключевых слов в системе</h5>
            <form name="deleteChecked" action="{{ path ('delete_tags') }}">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <table class="table table-striped table-hover">
                            <thead class="thead-light">
                            <tr>
                                <th scope="col"></th>
                                <th scope="col">Ключевое слово, или фраза</th>
                                <th scope="col">iD</th>
                                <th scope="col"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for tag in tags %}
                                <tr>
                                    <td><input type="checkbox" name="tag[]" value="{{ tag.id }}"></td>
                                    <td class="font-weight-bold">{{ tag.name }}</td>
                                    <td><small class="a-light-gray">{{ tag.id }}</small></td>
                                    <td class="text-right"><a href="{{ path ('edit_tag', {id: tag.id}) }}"><i class="far fa-lg fa-edit"></i></a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-primary" formnovalidate>Удалить выбранные</button>
                </div>
            </form>

        </div>
    </div>
{% endblock %}
