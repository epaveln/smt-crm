{% extends 'base.html.twig' %}

{% block title %}Добавление нового сотрудника{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-12 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <form method="POST" action="">
                        <h5 class="card-title text-center">Добавление нового сотрудника</h5>
                        {{ form_start(personForm) }}

                        {{ form_row(personForm.name, {label: "Имя сотрудника."}) }}
                        {{ form_row(personForm.contractor, {label: "Сотрудник компании", attr:{'contractorId': id}}) }}
                        {{ form_row(personForm.position, {label: "Должность на предприятии."}) }}
                        {{ form_row(personForm.skypeId, {label: "Skype id сотрудника."}) }}
                        {{ form_row(personForm.telegram, {label: "Telegram сотрудника."}) }}

                        <div class="form-group">
                            <ul class="collection-ul-email" data-prototype="{{ form_widget(personForm.email.vars.prototype)|e('html_attr') }}">
                                {% for email in personForm.email %}
                                    <li>{{ form_row(email, {label: "Email компании."}) }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="form-group">
                            <ul class="collection-ul-phone" data-prototype="{{ form_widget(personForm.phone.vars.prototype)|e('html_attr') }}">
                                {% for phone in personForm.phone %}
                                    <li>{{ form_row(phone, {label: "Телефон компании."}) }}</li>
                                {% endfor %}
                            </ul>
                        </div>

                        <button class="btn btn-lg btn-primary" type = "submit" formnovalidate>Добавить</button>
                        {{ form_end(personForm) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent () }}

    <script src="{{ asset ('/js/email-collection-widget.js') }}"></script>
    <script src="{{ asset ('/js/phone-collection-widget.js') }}"></script>
{% endblock %}