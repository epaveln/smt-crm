{% extends 'base.html.twig' %}

{% block title %}Изменение данных контрагента{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-12 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Изменение данных контрагента</h5>
                    {{ form_start(editContractorForm) }}

                    {{ form_row(editContractorForm.name, {label: "Название компании."}) }}
                    {{ form_row(editContractorForm.address, {label: "Адрес компании."}) }}
                    {{ form_row(editContractorForm.contractorType, {label: "Тип контрагента."}) }}
                    {{ form_row(editContractorForm.country, {label: "Страна."}) }}

                    <div class="form-group">
                        <ul class="collection-ul-email" data-prototype="{{ form_widget(editContractorForm.emails.vars.prototype)|e('html_attr') }}">
                            {% for email in editContractorForm.emails %}
                                <li class="collection-li">{{ form_row(email, {label: "Email компании."}) }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="form-group">
                        <ul class="collection-ul-phone" data-prototype="{{ form_widget(editContractorForm.phones.vars.prototype)|e('html_attr') }}">
                            {% for phone in editContractorForm.phones %}
                                <li class="collection-li">{{ form_row(phone, {label: "Телефон компании."}) }}</li>
                            {% endfor %}
                        </ul>
                    </div>

                    <button class="btn btn-lg btn-primary" type = "submit">Изменить</button>
                    {{ form_end(editContractorForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent () }}

    <script src="{{ asset ('/js/email-collection-widget.js') }}"></script>
    <script src="{{ asset ('/js/phone-collection-widget.js') }}"></script>
{% endblock %}