{% extends 'base.html.twig' %}

{% block title %}Изменение тендера{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-12 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Изменение тендера</h5>
                    {{ form_start(editTenderForm) }}

                    {{ form_row(editTenderForm.contractor, {label: "Объявлен организацией."}) }}
                    {{ form_row(editTenderForm.title, {label: "Краткое описание"}) }}
                    {{ form_row(editTenderForm.description, {label: "Описание"}) }}
                    {{ form_row(editTenderForm.openedAt, {label: "Объявлен"}) }}
                    {{ form_row(editTenderForm.startAt, {label: "Старт"}) }}
                    {{ form_row(editTenderForm.endAt, {label: "Подача до"}) }}
                    {{ form_row(editTenderForm.sentAt, {label: "Предложение отправлено"}) }}
                    {{ form_row(editTenderForm.result, {label: "Результаты проведения тендера"}) }}

                    <div class="form-group">
                        <ul class="collection-ul-attach" data-prototype="{{ form_widget(editTenderForm.attach.vars.prototype)|e('html_attr') }}">
                            {% for attach in editTenderForm.attach %}

                                <li class="collection-li"><i class="fas fa-paperclip"></i>{{ form_row(attach, {label: "Прикрепленный файл.", attr: {"READONLY": "READONLY"}}) }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="text-right">
                        <a class="btn btn-outline-secondary" href="{{ path ('attach_file_to_tender', {id: tenderId}) }}">
                            <i class="fas fa-plus-circle"></i>  Прикрепить файл
                        </a>
                    </div>

                    <button class="btn btn-lg btn-primary" type = "submit">Изменить</button>
                    {{ form_end(editTenderForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent () }}

    <script src="{{ asset ('/js/attach-collection-widget.js') }}"></script>
{% endblock %}