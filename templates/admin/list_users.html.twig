{% extends 'base.html.twig' %}

{% block title %}Все пользователи в системе!{% endblock %}

{% block body %}
    <div class="row bg-white">
        <div class="col-sm-9 col-md-7 col-lg-12 mx-auto margin-300">
            <h2 class="article-title">Список пользователей системы</h2>
            <form name="deleteChecked" action="{{ path ('delete_users') }}">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <table class="table table-striped table-hover">
                            <thead class="thead-dark">
                            <tr>
                                <th scope="col"></th>
                                <th scope="col">iD</th>
                                <th scope="col">Имя</th>
                                <th scope="col">Фамилия</th>
                                <th scope="col">Email</th>
                                <th scope="col">Редактировать</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td><input type="checkbox" name="user[]" value="{{ user.id }}"></td>
                                    <td class="font-weight-bold">{{ user.id }}</td>
                                    <td>{{ user.name }}</td>
                                    <td>{{ user.surname }}</td>
                                    <td>{{ user.email }}</td>
                                    <td class="text-right"><a href="{{ path ('edit_user', {id: user.id}) }}"><i class="far fa-lg fa-edit"></i></a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-primary" formnovalidate>Удалить выбранных</button>
                </div>
            </form>

        </div>
    </div>
{% endblock %}
